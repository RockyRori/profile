---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import ContactCTA from "../../components/ContactCTA.astro";
import PostsPreview from "../../components/PostsPreview.astro";
import Hero from "../../components/Hero.astro";
import Grid from "../../components/Grid.astro";

export async function getStaticPaths() {
  const picture = await getCollection("picture");
  const technique = await getCollection("technique");
  const allPosts = picture.concat( technique )

  const uniqueTags = [
    ...new Set(allPosts.map((post) => post.data.tags).flat()),
  ];

  return uniqueTags.map((tag) => {
    let filteredPosts = allPosts.filter((post) => post.data.tags.includes(tag));

    filteredPosts.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());

    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---
<BaseLayout title={tag} description="标签页">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <main class="wrapper stack gap-8">
      <Hero title={tag} tagline={`为你找到了${posts.length}个结果`} align="start" />
      <Grid variant="offset">
        {
          posts.map((project) => (
            <li>
              <PostsPreview project={project} />
            </li>
          ))
        }
      </Grid>
    </main>
    <ContactCTA />
  </div>
</BaseLayout>